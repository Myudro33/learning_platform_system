generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assignment {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  courseId    Int
  course      Course  @relation(fields: [courseId], references: [id])
  dueDate     String
  done        Boolean
}

model File {
  id         Int     @id @default(autoincrement())
  filename   String
  url        String
  uploadedBy Int
  lectureId  Int
  lecture    Lecture @relation(fields: [lectureId], references: [id])
}

model Lecture {
  id          Int    @id @default(autoincrement())
  title       String
  content     String
  courseId    Int
  course      Course @relation(fields: [courseId], references: [id])
  videoUrl    String
  attachments File[]
}

model Course {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  createdBy   Int
  created     User      @relation("CourseCreator", fields: [createdBy], references: [id])
  students    User[]    @relation("CourseStudents")
  Lecture     Lecture[]

  Assignment Assignment[]
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique()
  password      String
  roleId        Int
  role          Role     @relation(fields: [roleId], references: [id])
  avatar        String?
  courseCreator Course[] @relation("CourseCreator")
  courseId      Course[] @relation("CourseStudents")

  @@map("users")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  User User[]

  @@map("roles")
}
